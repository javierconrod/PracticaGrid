<Window x:Class="PracticaGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="grdContenedor">
        <!--Definicion de columnas-->
        <Grid.ColumnDefinitions>
            <!-- Cada Column definition es una nueva columna, cada columna debe establecer anchura-->
            <ColumnDefinition  Width="3*"/>
            <ColumnDefinition  Width="2*"/>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Right">Este es el Botón A</Button>
        <Button Grid.Column="1">Y este es el Botón B</Button>
        <Button Grid.Column="2" Grid.Row="1">Botón C</Button>
    </Grid>
</Window>
